{
  "steps": [
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "-t",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/web-api",
        "./API"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "push",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/web-api"
      ]
    },
    {
      "name": "gcr.io/google.com/cloudsdktool/cloud-sdk",
      "entrypoint": "gcloud",
      "args": [
        "run",
        "deploy",
        "web-api",
        "--image",
        "${_LOCATION}-docker.pkg.dev/$PROJECT_ID/${_REPOSITORY}/web-api",
        "--region",
        "us-central1",
        "--platform",
        "managed",
        "--port",
        "8080",
        "--cpu",
        "2",
        "--memory",
        "4G",
        "--allow-unauthenticated"
      ],
      "id": "web-api-deploy"
    }
  ],
  "options": {
    "logging": "CLOUD_LOGGING_ONLY"
  }
}
